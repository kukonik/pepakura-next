{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:5174",
    "distDir": "../dist"
  },
  "package": {
    "productName": "pepakura-next",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "scope": ["$APPDATA/*", "$DESKTOP/*"]
      },
      "shell": {
        "open": true
      },
      "window": {
        "close": true,
        "minimize": true,
        "maximize": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.pepakura.next",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": "default-src 'self'"
    },
    "windows": [
      {
        "title": "Pepakura Next",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "decorations": true
      }
    ]
  }
}
